<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" value="" placeholder="Enter your city name">
                        <input type="submit" value="check !" id="submitBtn">
                    </form>
                </div>

                {{!-- bootstrap --}}
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-80">
                        <div class="col-md-10 col-lg-8 col-xl-6">

                            <div class="card bg-dark text-white" style="border-radius: 30px;">
                                <div class="bg-image" style="border-radius: 35px;">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-weather/draw1.webp"
                                        class="card-img" alt="weather" />
                                    <div class="mask" style="background-color: rgba(190, 216, 232, .5);"></div>
                                </div>
                                <div class="card-img-overlay text-dark p-5">
                                    <div
                                        class="top_layer d-flex justify-content-between align-items-center font-weight-bold">
                                        <h4 id="day">Tuesday</h4>
                                        <h4 id="date">13 OCT</h4>
                                    </div>
                                    <h3 class="mb-0 mt-1" id="city_name"></h3>
                                    <p class="display-2 my-1" id="temp">0Â°C</p>
                                    <p class="mb-2">Country: <strong id="country"></strong></p>
                                    <h5 id="temp_status"></h5>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}

    <script src="js/main.js"></script>
</body>

</html>